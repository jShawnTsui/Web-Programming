extend layout
block content
    .container
      .col-sm-6.col-sm-offset-3
        h1
          span.fa.fa-sign-in
          |  Login
        p
          -if(messages)
            alert.alert-danger !{messages}

          form(action='/login', method='post')
            .form-signin
            label User Type
            select#userType.form-control.form-control-inline
              option Business
              option Individual

            .form-group
            label Email
            input.form-control(type='text', name='email')

            .form-group
            label Password
            input.form-control(type='password', name='password')

            .checkbox
              label
                input(type='checkbox', value='remember-me')
                |  Remember me
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Log in
        
        label Or Login in with 
            a.btn.btn-primary(href='/auth/facebook')
                span.fa.fa-facebook
                |  Facebook
        p        
        label Don't an account? 
              a(href='/signup') signup   
        p      
        label Or go 
              a(href='/') home

