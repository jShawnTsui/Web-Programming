doctype html
html(lang='en')
  head 
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title Yelp Data Analysis
    // Bootstrap Core CSS
    link(href='css/bootstrap.min.css', rel='stylesheet')
    // Custom CSS
    link(href='css/landing-page.css', rel='stylesheet')
    // Custom Fonts
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
    link(href='font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic', rel='stylesheet', type='text/css')

body
  .navbar-wrapper
    .container-fluid
      nav.navbar.navbar-inverse.navbar-static-top
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#') Yelp Data Analysis
          #navbar.navbar-collapse.collapse
            ul.nav.navbar-nav
              li.active
                a(href='/') Home
              li
                a(href='/feedback') Feedback
              li
                a(href='/signup')
                  span.glyphicon.glyphicon-user
                  |  Sign Up
              li
                a(href='/login')
                  span.glyphicon.glyphicon-log-in
                  |  Login
            form(method='get', action='http://www.google.com/search' style='float:right;')
              div(style='border:1px;padding:8px 8px 8px 8px;width:20em;')
                table(border='0', align='center', cellpadding='0')
                  tr
                    td
                      input(type='text', name='q', size='25', maxlength='255', placeholder='Google Search' class="form-control")
                    td
                      input(type='submit', value='Search' class="btn btn-primary")
    block slide
    .container
      // Main component for a primary marketing message or call to action
      .jumbotron
        .main-content
          block content
    footer.footer
      .container
        block footer
        p(class="text-center").text-muted Contributors: Tingyi Dong, Yiding Zhang, Xiangyang Cui
        p(class="text-center").text-muted CIS 550 Final Project
        p(class="text-center").text-muted University of Pennsylvania

    